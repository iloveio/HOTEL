<Window x:Class="Kitchen.AddIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitchen"
        mc:Ignorable="d"
        Title="AddIngredientWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="125,148,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="label" Content="Add Ingredient" FontSize="20" HorizontalAlignment="Left" Margin="125,23,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Ingredient Name:" HorizontalAlignment="Left" Margin="148,117,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.225,-0.619"/>
        <Button x:Name="button" Content="Add Ingredient" HorizontalAlignment="Left" Margin="148,204,0,0" VerticalAlignment="Top" Width="102" Click="button_Click"/>

    </Grid>
</Window>
