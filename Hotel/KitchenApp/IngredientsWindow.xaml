<Window x:Class="Kitchen.IngredientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitchen"
        mc:Ignorable="d"
        Title="IngredientsWindow" Height="400" Width="400">
    <Grid>
        <Label x:Name="label" Content="Ingredients in fridge" FontSize="20" HorizontalAlignment="Left" Margin="91,22,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="ingredientsList" ItemsSource="{Binding ingredientsList}" HorizontalAlignment="Left" Height="228" Margin="58,74,0,0" VerticalAlignment="Top" Width="262">
            <ListView.View>
                <GridView AllowsColumnReorder="True">
                    <GridView.Columns>
                        <GridViewColumn Header="Name" Width="Auto"  DisplayMemberBinding="{Binding name}"/>
                        <GridViewColumn Header="Number" Width="Auto" DisplayMemberBinding="{Binding number}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button" Content="Add New Ingredient" HorizontalAlignment="Left" Margin="125,318,0,0" VerticalAlignment="Top" Width="134" Click="button_Click"/>

    </Grid>
</Window>
