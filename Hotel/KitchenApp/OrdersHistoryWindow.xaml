<Window x:Class="Kitchen.OrdersHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kitchen"
        mc:Ignorable="d"
        Title="OrdersHistoryWindow" Height="400" Width="400">
    <Grid>
        <Label x:Name="label" Content="Orders History" FontSize="20" HorizontalAlignment="Left" Margin="127,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.093,-0.297"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="225" Margin="28,77,0,0" VerticalAlignment="Top" Width="163">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="Auto"  DisplayMemberBinding="{Binding customerID}"/>
                    <GridViewColumn Header="Price" Width="Auto" DisplayMemberBinding="{Binding totalCost}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
